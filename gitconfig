[include]
  path = ~/.gitconfig_local
[alias]
  co = checkout
  st = status
  br = branch
  w = whatchanged
  amend = commit --amend
  unstage = reset HEAD --
[apply]
  whitespace = nowarn
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true
  pager = true
[merge]
  summary = true
[push]
  default = upstream
[remote "origin"]
  push = HEAD
[diff]
  ignoresubmodules = untracked
[core]
  excludesfile = ~/.gitignore
[heroku]
  account = personal
[pull]
  rebase = true
[fetch]
  prune = true
