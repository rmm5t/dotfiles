task 'rcov' do
  test_files = "test/**/*_test.rb"
  options = "--rails --sort coverage --sort-reverse --only-uncovered "
  options = (options + "--exclude .railsrc")
  system("rcov -Itest #{options} #{test_files}")
end

task 'rcov:functionals' do
